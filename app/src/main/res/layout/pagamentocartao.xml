<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cartão de Crédito"
        android:id="@+id/cartaocred"
        android:textSize="15pt"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Numero do Cartão"
        android:id="@+id/txtNumCartao" android:textSize="20sp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5sp"
        android:id="@+id/editTextNumCartao" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Nome do Titular"
        android:id="@+id/txtNomeTitulae" android:textSize="20sp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5sp"
        android:id="@+id/editTextNomeTitular" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Data de expiração"
        android:id="@+id/txtDataExp" android:textSize="20sp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5sp"
        android:inputType="textPassword"
        android:id="@+id/editTextDataExp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Bandeira"
        android:id="@+id/txtBandeiraCartao" android:textSize="20sp"/>

    <RadioButton
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:text="Visa"
        android:id="@+id/cartaoVisa"
        android:checked="false"
        android:layout_marginTop="15px"
        android:textSize="10pt" />

    <RadioButton
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="MasterCard"
        android:id="@+id/cartaoMaster"
        android:checked="false"
        android:layout_marginLeft="250px"
        android:layout_marginTop="-60px"
        android:textSize="10pt" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/btnConfirmar"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginTop="40px"
        android:textColor="#faf6f6"
        android:background="#413e22" />

</LinearLayout>